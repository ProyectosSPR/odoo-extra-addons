<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_n8n_config_settings" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.n8n</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="n8n Integration" string="n8n Integration" name="n8n_integration">
                    <block title="Credenciales de la API de n8n">
                        <setting help="La URL base de tu instancia de n8n (ej. https://n8n.miempresa.com)">
                            <field name="n8n_url"/>
                        </setting>
                        <setting help="Tu API Key generada en n8n para la autenticaciÃ³n.">
                            <field name="n8n_api_key" password="True"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

    <record id="action_n8n_config_settings" model="ir.actions.act_window">
        <field name="name">n8n Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="view_n8n_config_settings"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'n8n_integration'}</field>
    </record>

 
</odoo>