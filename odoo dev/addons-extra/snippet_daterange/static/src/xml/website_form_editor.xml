<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="website.form_field_daterange">
        <t t-call="website.form_field">
            <input
                type="text"
                class="form-control s_website_form_input widget_daterange"
                t-att-name="field.name"
                step="any"
                t-att-required="field.required || field.modelRequired || None"
                t-att-value="field.value"
                t-att-placeholder="field.placeholder"
                t-att-id="field.id"
                t-att-data-use-hidden="'daterange_value_' + field.id"
                readonly="readonly"
                tabindex="0"
            />
            <input t-att-name="'daterange_value_' + field.id" type="hidden" value=""/>
        </t>
    </t>

</templates>