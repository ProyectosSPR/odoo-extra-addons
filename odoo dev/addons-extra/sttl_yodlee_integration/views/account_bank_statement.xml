<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_bank_statement_form_view" model="ir.ui.view">
        <field name="name">account.bank.statement.form</field>
        <field name="model">account.bank.statement</field>
        <field name="arch" type="xml">
            <form string="Bank Statement">
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="balance_start"/>
                            <field name="balance_end_real"/>
                            <field name="company_id"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="reference"/>
                            <field name="first_line_index"/>
                            <field name="balance_end"/>
                            <field name="journal_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Transactions" name="statement_line_ids">
                            <field name="line_ids" context="{'default_date': date, 'default_journal_id': journal_id}">
                                <tree string="Statement lines" editable="bottom" limit="500">
                                    <field name="statement_id"/>
                                    <field name="suitable_journal_ids" invisible="1"/>
                                    <field name="journal_id"/>
                                    <field name="payment_ref"/>
                                    <field name="partner_id"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="ref"/>
                                    <field name="narration" string="Notes" optional="hidden"/>
                                    <field name="transaction_type" optional="hidden"/>
                                    <field name="amount"/>
                                    <field name="amount_currency" optional="hidden" groups="base.group_multi_currency"/>
                                    <field name="foreign_currency_id" optional="hidden"
                                           groups="base.group_multi_currency"/>
                                    <field name="account_number" optional="hidden"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bank_statement_tree_inherit" model="ir.ui.view">
        <field name="name">account.bank.statement.tree.view.inherit</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="account.action_bank_statement_tree" model="ir.actions.act_window">
        <field name="view_mode">tree,pivot,graph,form</field>
    </record>
</odoo>
