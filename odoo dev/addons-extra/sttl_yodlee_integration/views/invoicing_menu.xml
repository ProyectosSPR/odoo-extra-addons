<odoo>

    <record id="action_yodlee_banks_sync" model="ir.actions.act_window">
        <field name="name">Yodlee Banks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">yodlee.bank</field>
        <field name="context">{}</field> 
        <field name="domain"> []</field>
        <field name="view_mode">list,form</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet! Enter your first record
            </p>
        </field>
    </record>

    <record id="action_yodlee_transactions_wizard" model="ir.actions.act_window">
        <field name="name">Fetch Transactions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">yodlee.transaction.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <menuitem id="menu_yodlee_transaction_main"
        name="Yodlee"
        parent="account.menu_finance"
        sequence="34"/>

    <menuitem id="menu_yodlee_sync"
        name="Yodlee Banks"
        parent="menu_yodlee_transaction_main"
        action="action_yodlee_banks_sync"
        sequence="1"/>

    <menuitem id="menu_yodlee_transactions"
        name="Fetch Yodlee Transactions"
        parent="menu_yodlee_transaction_main"
        action="action_yodlee_transactions_wizard"
        sequence="2"/>

</odoo>
