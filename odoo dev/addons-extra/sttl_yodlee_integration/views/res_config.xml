<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_yodlee" model="ir.ui.view">
        <field name="name">res.config.settings.view.yodlee</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='main_currency_setting_container']" position="after">
                <div id="yodlee_container">
                    <h2>Yodlee Integration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box" id="sms">
                            <div class="o_setting_right_pane">
                                <div class="o_form_label">
                                    Client Id
                                </div>
                                <field name="yodlee_client_id" password="True" />
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="o_form_label">
                                    API Endpoint
                                </div>
                                <field name="yodlee_api_endpoint" />
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box" id="sms">
                            <div class="o_setting_right_pane">
                                <div class="o_form_label">
                                    Secret
                                </div>
                                <field name="yodlee_api_secret" password="True" />
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="o_form_label">
                                    Fast Link Url
                                </div>
                                <field name="yodlee_fastlink_url" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>